<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:duration="7000"
        android:fillAfter="true"
        android:fromXScale="0.6"
        android:fromYScale="0.6"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" />

    <translate
        android:duration="7000"
        android:fillAfter="true"
        android:fromYDelta="40%"
        android:toYDelta="0%" />
</set>