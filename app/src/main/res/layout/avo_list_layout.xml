<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#ffffff"
    android:id="@+id/avo_container" >

    <ImageView
        android:id="@+id/avo_native_image"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:paddingRight="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="Ad Image" />

    <TextView
        android:id="@+id/avo_ad_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avo_native_image"
        android:layout_toRightOf="@+id/avo_native_image"
        android:background="@android:color/transparent"
        android:text="Sponsored Ad"
        android:textSize="15dp"
        android:gravity="left"
        android:textColor="#a2a2a2" />

    <TextView
        android:id="@+id/avo_native_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avo_ad_icon"
        android:layout_toRightOf="@+id/avo_native_image"
        android:gravity="left"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:textColor="#5c5c5c"
        android:text="Default headline"
        android:textSize="17dp"/>

    <Button
        android:id="@+id/avo_cta_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avo_native_headline"
        android:layout_toRightOf="@+id/avo_native_image"
        android:layout_alignBottom="@+id/avo_native_image"
        android:gravity="left"
        android:singleLine="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffff"
        android:background="#a84830"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:text="Learn More" />

</RelativeLayout>