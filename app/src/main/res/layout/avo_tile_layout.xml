<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/avo_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/plain_border"
    >

    <RelativeLayout
        android:id="@+id/avo_native_image_wrapper"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/avo_native_headline"
        android:background="#36bf93"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-4dp"
        >


        <com.avocarrot.androidsdk.ui.MatchWidthImageView
            android:id="@+id/avo_native_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
           />

        <com.avocarrot.androidsdk.VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

        </com.avocarrot.androidsdk.VideoView>
    </RelativeLayout>

    <TextView
        android:id="@+id/avo_native_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/avo_cta_button"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:padding="2.5dp"
        android:text="Sample Native Ad"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="normal" />




    <TextView
        android:id="@+id/avo_ad_sponsored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2dp"
        android:gravity="left"
        android:padding="5dp"
        android:layout_marginLeft="4dp"
        android:singleLine="true"
        android:text="Sponsored "
        android:textColor="#bbbbbb"
        android:textSize="12dp"
        android:textStyle="italic" />

    <com.avocarrot.androidsdk.ui.AdChoicesView
        android:id="@+id/adChoices"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.avocarrot.androidsdk.ui.AdChoicesView>

    <TextView

        android:id="@+id/avo_cta_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/avo_ad_sponsored"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="15dp"
        android:background="#3562a0"
        android:gravity="center"
        android:minHeight="30dp"
        android:padding="5dp"
        android:text="Learn More"
        android:textColor="#ffffff"
        android:textSize="12dp" />

</RelativeLayout>