<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row_header">

            <ImageView
                android:id="@+id/list_avatar_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/list_avatar_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/list_avatar_image"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:textColor="#5ca589"
                android:textSize="18dp"
                android:text="Avatar Name"
                android:textStyle="bold"  />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/list_avatar_image"
                android:id="@+id/list_avatar_status"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="17dp"
                android:text="Status"
                android:textStyle="normal"
                android:layout_below="@+id/list_avatar_name"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/list_avatar_image"
                android:layout_below="@+id/list_avatar_status"
                android:id="@+id/listTimestamp"
                >

               <ImageView
                    android:id="@+id/hourglass_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:contentDescription="Ad Image"
                    android:src="@drawable/icon_location" />
                <TextView
                    android:id="@+id/list_avatar_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="#bbbbbb"
                    android:textSize="17dp"
                    android:text="Location"
                    android:textStyle="italic"
                    android:paddingTop="3dp"/>

            </LinearLayout>


        </RelativeLayout>
</RelativeLayout>