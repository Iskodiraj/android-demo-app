<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.avocarrot.avocarrotdemoapp.main.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Custom Ads #2"
        android:id="@+id/title"
        android:layout_below="@+id/section_label"
        android:layout_centerHorizontal="true"
        android:textColor="@color/avocarrot_gray" />
    <View
        android:id="@+id/line_seperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="15dp"
        android:background="@color/avocarrot_gray"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/line_seperator"
        android:background="#e4e4e4">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/box_wrapper"
            android:id="@+id/custom_ad_wrapper"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_green">

            <ImageView
                android:id="@+id/custom_ad_image"
                android:layout_below="@+id/next_wrapper"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="Ad Image" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/next_wrapper"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/avo_ad_sponsored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="Sponsored"
                    android:textColor="#a2a2a2"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custom_ad_headline"
                    android:textSize="18sp"
                    android:layout_below="@+id/avo_ad_sponsored"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
        </RelativeLayout>

            <Button
                android:id="@+id/custom_ad_cta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/border_green"
                android:layout_below="@+id/custom_ad_wrapper"
                android:paddingLeft="20dp"
                android:layout_centerHorizontal="true"
                android:paddingRight="20dp"
                android:text="Learn More"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box_wrapper"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_green"
        android:padding="5dp">

        <ImageView
            android:id="@+id/custom_2_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_android"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:text="This is another custom integration"
            android:textSize="17dp"
            android:textStyle="italic"
            android:id="@+id/description"
            android:layout_toRightOf="@id/custom_2_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
