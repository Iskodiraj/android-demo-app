<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/border_blue"
    android:padding="10dp">

    <ImageView
        android:id="@+id/instream_image"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:paddingRight="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="Ad Image"
        android:src="@drawable/icon_fruits" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/instream_image"
        android:gravity="left"
        android:paddingTop="12dp"
        android:paddingBottom="3dp"
        android:singleLine="true"
        android:textColor="#649dda"
        android:text="Title Here"
        android:textSize="18sp"
        android:textStyle="bold"  />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/instream_image"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:textColor="#585c58"
        android:text="This is a nice fruit."
        android:textSize="15sp"
        android:textStyle="bold"  />

</RelativeLayout>