<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:background="#ffffdb"
    android:id="@+id/avo_container" >

    <ImageView
        android:id="@+id/avo_native_image"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:paddingRight="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="Ad Image" />

    <TextView
        android:id="@+id/avo_ad_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/avo_native_image"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:paddingRight="15dp"
        android:text="Ad"
        android:textColor="#a2a2a2"
        android:textSize="15sp"	        
        android:textStyle="bold" />

	    <Button
	        android:id="@+id/avo_cta_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/avo_native_headline"
	        android:layout_toRightOf="@+id/avo_native_image"
	        android:layout_alignBottom="@+id/avo_native_image"
	        android:gravity="left"
	        android:singleLine="true"
	        android:includeFontPadding="false"
	        android:paddingTop="7dp"
	        android:layout_marginBottom="10dp"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:background="#a84830"
	        android:textSize="13sp"    
   			android:layout_centerHorizontal="true"
	        android:text="Learn More" />

	    <TextView
	        android:id="@+id/avo_native_headline"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/avo_cta_button"
	        android:gravity="left"
	        android:paddingBottom="10dp"
	        android:paddingTop="10dp"
	        android:singleLine="true"
	        android:text="Default headline"
	        android:textColor="#5c5c5c"
	        android:textSize="15sp" />
	
</RelativeLayout>